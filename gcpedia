<script>


/* Map Category Selector */
$('#all').click(function(){
		$('.item').show();
		$('.planningMap').hide();
		$('.negotiationMap').hide();
        return false;
});

$('#lease-in').click(function(){
		$('.item').show();
		$('.item').not('.lease-in').hide();
		$('.planningMap').hide();
		$('.negotiationMap').hide();
        return false;
});

/* experimental */

$('#Policyall').click(function(){
		$('.item').show();
		$('.planningMap').hide();
        return false;
});

$('#treasury').click(function(){
		$('.item').show();
		$('.item').not('.treasury').hide();
		$('.planningMap').hide();
		$('.negotiationMap').hide();
        return false;
});

$('#publicworks').click(function(){
		$('.item').show();
		$('.item').not('.publicworks').hide();
		$('.planningMap').hide();
		$('.negotiationMap').hide();
        return false;
});

/* experimental END */

